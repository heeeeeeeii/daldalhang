<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="daldal.mappers.llmapMapper">
	<!-- namespace : 자바클래스에서 mapper 를 찾는 경로
				  다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
	
	<select id="selectList" resultType="vo.LlmapVO">
		SELECT * FROM llmap ORDER BY llcode
	</select>

	<select id="selectOne" resultType="vo.LlmapVO">
		SELECT frkname FROM llmap ORDER BY llcode
	</select>
	
	<!-- 지도 검색 -->
	<select id="mapSearch" resultType="vo.LlmapVO">
		<![CDATA[
			SELECT * FROM llmap l 
		]]>
		<!-- WHERE절을 include 태그로 삽입 -->
		<include refid="search"></include>
	</select>
	
	<!-- WHERE절 -->
	<sql id="search">
		<choose>
			<!-- 매장명 검색 -->
			<when test="searchOption=='llname'">
				WHERE llname LIKE CONCAT(CONCAT('%',#{keyword}),'%')
				ORDER BY llcode
			</when>
			<!-- 주소 검색 -->
			<when test="searchOption=='frcode'">
				JOIN franchise f ON l.frcode=f.frcode 
				WHERE f.frkname LIKE CONCAT(CONCAT('%',#{keyword}),'%') 
<!-- 				OR streetnum LIKE CONCAT(CONCAT('%',#{keyword}),'%') -->
				ORDER BY llcode
			</when>
		</choose>
	</sql>
	
	</mapper>